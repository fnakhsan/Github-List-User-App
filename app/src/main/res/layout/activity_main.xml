<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBABAB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/line1"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/black" />

        <View
            android:id="@+id/line2"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#FF1100" />

        <View
            android:id="@+id/line3"
            android:layout_width="20dp"
            android:layout_height="210dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@id/line1"
            android:background="#FF1100" />

        <View
            android:id="@+id/line4"
            android:layout_width="20dp"
            android:layout_height="210dp"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@id/line2"
            android:background="@color/black" />

        <View
            android:id="@+id/line5"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@id/line3"
            android:background="@color/black" />

        <View
            android:id="@+id/line6"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@+id/line4"
            android:background="#FF1100" />

        <View
            android:layout_width="20dp"
            android:layout_height="130dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@id/line5"
            android:background="#FF1100" />

        <View
            android:layout_width="20dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@+id/line6"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/title"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="100sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/aldrich"
            android:text="@string/github_user_app"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>